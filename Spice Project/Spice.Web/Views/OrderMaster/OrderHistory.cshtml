@model Spice.DataContarct.ViewModel.OrderMaster_ViewModel
@{
    ViewBag.Title = "OrderHistory";
    Layout = "~/Views/Shared/_LayoutBackEnd.cshtml";
}

<!-- Content Wrapper START -->
<div class="main-content">
    <div class="page-header">
        <h2 class="header-title">Order History</h2>
        <div class="header-sub-title">
            <nav class="breadcrumb breadcrumb-dash">
                <a href="#" class="breadcrumb-item"><i class="anticon anticon-home m-r-5"></i>Home</a>
                <a class="breadcrumb-item" href="#">Master</a>
                <span class="breadcrumb-item active">Order History</span>
            </nav>
        </div>
    </div>
    <div class="card">
        <div class="card-body">
            <div class="col-lg-12 text-right">
                <a href="/OrderMaster/Get_Listing" class="btn btn-sm btn-primary">Back</a>
            </div>

            <div style="">
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            <label class="text-primary">Order Invoice No. :</label>
                            <label>@Model.orderMaster.Order_Invoice_Number</label>
                        </div>
                    </div>
                </div>

                <h5 class="m-b-10 text-primary">Order Level</h5>
                <div class="table-responsive">
                    <table class="table table-sm table-no-border">
                        <thead>
                            <tr>
                                <th style="width: 15%;">Date</th>
                                <th>Status</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var Order_Status in Model.lst_Order_Status_History)
                            {
                                <tr>
                                    <td>@Order_Status.Update_Date.ToString("dd-MMM-yyyy")</td>
                                    <td>@(Model.drp_OrderStatus.FirstOrDefault(t => t.Key == Order_Status.Status_Id).Value.Replace('_', ' '))</td>
                                </tr>
                            }


                        </tbody>
                    </table>
                </div>

                <hr />

                <div class="row">
                    <div class="col-md-12">
                        <h5 class="m-b-10 text-primary">Vendor Level</h5>
                        <div class="table-responsive m-b-10">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th style="width: 20%;">Invoice No.</th>
                                        <th style="width: 25%;">Vendor Name</th>
                                        <th style="width: 20%;">Date</th>
                                        <th style="width: 30%;">Status</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var Invoice_Status in Model.lst_Invoice_Status_History)
                                    {
                                        <tr>
                                            <td>@Invoice_Status.Invoice_Number</td>
                                            <td>@(Model.order_Invoice_Details.FirstOrDefault(t => t.Invoice_Number == Invoice_Status.Invoice_Number).Vendor_Name)</td>
                                            <td>@Invoice_Status.Update_Date.ToString("dd-MMM-yyyy")</td>
                                            <td>@(Model.drp_InvoiceStatus.FirstOrDefault(t => t.Key == Invoice_Status.Status_Id).Value.Replace('_', ' '))</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>



            </div>

        </div>
    </div>

</div>
<!-- Content Wrapper END -->
