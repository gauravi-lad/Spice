@model Spice.DataContarct.ViewModel.ForgotPassword_ViewModel
@{
    Layout = "~/Views/Shared/_LayoutFrontEnd.cshtml";
    ViewBag.Title = "ForgotPassword";
}
@{
    ViewBag.Title = "Chane_Password_New";
}

<h2>Chane_Password_New</h2>
<script src="~/Scripts/jquery-3.3.1.min.js"></script>

<script>
    $(document).ready(function () {
        debugger;
        $('#btnChangepassword').click(function () {

            $("#frmchangePwd").attr("action", "/ForgotPassword/Reset_password");
            $("#frmchangePwd").submit();
        });
    })
</script>

<div class="card">
    <div class="card-header">
        <h4 class="card-title">Change Password</h4>
    </div>
    <div class="card-body">
        <form id="frmchangePwd">
            <div class="form-row">
                <div class="form-group col-md-3">
                    <label class="font-weight-semibold" for="oldPassword">Enter OTP</label>
                    <input type="password" name="forgotPassword.OTP" class="form-control" id="txtOTP" placeholder="Old Password">
                </div>
                <div class="form-group col-md-3">
                    <label class="font-weight-semibold" for="newPassword">New Password</label>
                    <input type="password" name="forgotPassword.NewPassword" class="form-control" id="txtnewPassword" placeholder="New Password">
                </div>
                <div class="form-group col-md-3">
                    <label class="font-weight-semibold" for="newPassword">Confirm Password</label>
                    <input type="password" name="forgotPassword.NewPassword" class="form-control" id="txtConfirmPassword" placeholder="New Password">
                </div>

                <div class="form-group col-md-3">
                    <button id="btnChangepassword" class="btn btn-primary m-t-30">Verify & Change</button>
                </div>
            </div>
        </form>
    </div>
</div>


