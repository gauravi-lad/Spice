
@{
    ViewBag.Title = "CategoryMaster";
    Layout = "~/Views/Shared/_LayoutBackEnd.cshtml";
}

<script src="~/Scripts/Category/Category_Event.js"></script>

<div class="main-content">
    <div class="page-header">
        <h2 class="header-title">Category Master</h2>
        <div class="header-sub-title">
            <nav class="breadcrumb breadcrumb-dash">
                <a href="#" class="breadcrumb-item"><i class="anticon anticon-home m-r-5"></i>Admin</a>
                <a class="breadcrumb-item" href="#">Category</a>
                <span class="breadcrumb-item active">Index</span>
            </nav>
        </div>
    </div>

    <div class="card">
        <div class="card-body">
            <div class="text-right m-b-20">
                <button class="btn btn-primary" id="btnAddCategory">
                    <i class="anticon anticon-plus-circle m-r-5"></i>
                    <span>Add Category</span>
                </button>
            </div>
            <div id="dvMsg">
                <div class="alert alert-success dvSuccess" style="display:none;">
                    <div class="d-flex align-items-center justify-content-start">
                        <span class="alert-icon">
                            <i class="anticon anticon-check-o"></i>
                        </span>
                        <span>Record Addedd Successfully!!!</span>
                    </div>
                </div>
                <div class="alert alert-success dvUpdate" style="display:none;">
                    <div class="d-flex align-items-center justify-content-start">
                        <span class="alert-icon">
                            <i class="anticon anticon-check-o"></i>
                        </span>
                        <span>Record Updated Successfully!!!</span>
                    </div>
                </div>
                <div class="alert alert-danger dvError" style="display:none;">
                    <div class="d-flex justify-content-start">
                        <span class="alert-icon m-r-20 font-size-30">
                            <i class="anticon anticon-close-circle"></i>
                        </span>
                        <div>
                            <h5 class="alert-heading">Error</h5>
                            <p>Failed to Insert</p>
                        </div>
                    </div>
                </div>
            </div>
            <div class="m-t-25" style="display:none;" id="dvInsert">
                <form id="frmCategory" method="post" enctype="multipart/form-data">
                    <div class="form-row">
                        <input type="hidden" id="hdnCategoryId" name="category.CategoryId" />
                        <div class="form-group col-md-4">
                            <label for="inputCategoryName">Category Code</label>
                            <input type="text" class="form-control required CheckExistinValidation" id="txtCategoryCode" placeholder="Category Code" name="category.CategoryCode" maxlength="3" onchange=" return IsCategoryCodeexist();">
                            <input type="hidden" id="hdnCategoryCode" />
                             <input type="hidden" id="hdnFlag" />

                            <span class="error"></span>
                            <span class="Existerror" style="color:red"></span>
                        </div>
                        <div class="form-group col-md-4">
                            <label for="inputCategoryName">Category Name</label>
                            <input type="text" class="form-control required" id="txtCategoryName" placeholder="Category Name" name="category.CategoryName">
                            <span class="error"></span>
                        </div>
                        <div class="form-group col-md-4">
                            <label for="inputShortDescription">Short Description</label>
                            <input type="text" class="form-control required" id="txtShortDescription" placeholder="Short Description" name="category.CategoryShortDescription">
                            <span class="error"></span>
                        </div>                       
                    </div>
                    <div class="form-row">

                        <div class="form-group col-md-4">
                            <label for="inputLongDescription">Long Description</label>
                            <textarea class="form-control required" name="category.CategoryLongDescription" id="txtLongDescription" placeholder="Long Description"></textarea>
                            <span class="error"></span>
                        </div>
                        <div class="form-group col-md-4 d-flex align-items-center">
                            <div class="switch m-r-10">
                                <input type="checkbox" id="switch-1" checked>
                                <label for="switch-1"></label>
                            </div>
                            <input type="hidden" id="txtIsActive" value="true" name="category.IsActive">
                            <label>Is Active</label>
                        </div>
                        <div class="col-lg-6 col-md-6">
                            <div class="form-group billing-info">
                                <div class="form-group billing-info">
                                   
                                        <img id="img1"
                                             height="100"
                                             width="90"
                                             src="@Url.Content("~//Img//plus.jpg")"
                                             style="border:solid" />
                                    
                                </div>
                                <label>Upload Category Image</label>
                               
                                    <input type="file" class="form-control prImage" name="ImageData1" id="ImageData1" onchange="return ValidateFileUpload(id, '#img1');showImage1(this)" placeholder="Category Image" @*onchange="showImage1(this);return ValidateFileUpload()"*@ />
                               
                                <input type="hidden" id="hdncategoryImage"class="form-control" name="category.CategoryImage" value="" />
                                <span class="error"></span>
                            </div>
                        </div>

                    </div>
                  
                    <button id="btnSubmit" class="btn btn-primary" type="submit">Save</button>
                     <a  class="btn btn-primary" href="@Url.Action("CategoryMaster","Category")">Cancel</a>
                </form>
            </div>
            <div id="myGrid_Category" style="height: 500px; width:100%;" class="ag-theme-alpine"></div>
        </div>
    </div>
</div>

<script type="text/javascript" charset="utf-8">
     $(document).ready(function () {

        if ('@ViewBag.Result'!= "")
        {
            if ('@ViewBag.Result' == "1") {
                $('.dvSuccess').show();
            }
            else if('@ViewBag.Result' == "2")
            {
                $('.dvUpdate').show();
            }
            else {
                $('.dvError').show();
            }
        }
        $("#dvMsg").delay(2000).hide(0);
    });

</script>




