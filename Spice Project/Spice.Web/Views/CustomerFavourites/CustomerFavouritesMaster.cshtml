@model Spice.DataContarct.ViewModel.CustomerFavourites_ViewModel
@{

    Layout = "~/Views/Shared/_LayoutBackEnd.cshtml";
}

<h2>CustomerFavouritesMaster</h2>

<script src="~/Scripts/jquery-3.3.1.min.js"></script>
<script src="~/Scripts/CustomerFavourites/CustomerFavourites_Event.js"></script>





<!-- Content Wrapper START -->
<div class="main-content">
    <div class="page-header">
        <h2 class="header-title">Customer Favourites Master</h2>
        <div class="header-sub-title">
            <nav class="breadcrumb breadcrumb-dash">
                <a href="#" class="breadcrumb-item"><i class="anticon anticon-home m-r-5"></i>Home</a>
                <a class="breadcrumb-item" href="#">Master</a>
                <span class="breadcrumb-item active">Customer Favourites Master</span>
            </nav>
        </div>
    </div>
    <div class="card">
        <div id="dvMsg">
            <div class="alert alert-success dvSuccess" style="display:none;">
                <div class="d-flex align-items-center justify-content-start">
                    <span class="alert-icon">
                        <i class="anticon anticon-check-o"></i>
                    </span>
                    <span>Record Addedd Successfully!!!</span>
                </div>
            </div>
            <div class="alert alert-success dvUpdate" style="display:none;">
                <div class="d-flex align-items-center justify-content-start">
                    <span class="alert-icon">
                        <i class="anticon anticon-check-o"></i>
                    </span>
                    <span>Record Updated Successfully!!!</span>
                </div>
            </div>
            <div class="alert alert-danger dvError" style="display:none;">
                <div class="d-flex justify-content-start">
                    <span class="alert-icon m-r-20 font-size-30">
                        <i class="anticon anticon-close-circle"></i>
                    </span>
                    <div>
                        <h5 class="alert-heading">Error</h5>
                        <p>Failed to Insert</p>
                    </div>
                </div>
            </div>
        </div>
        <div class="card-body">
            <div class="m-t-25" style="max-width: 700px">
                <form id="frmCustomerFavourites" method="post" enctype="multipart/form-data">
                    <div class="form-row">
                        <div class="col-md-3">
                            <div class="form-group">
                                <label>Customer Name</label>
                                <select id="drpCustomer" class="form-control required" name="CustomerFavourites.Customer_Id" placeholder="Customer Name" >
                                    <option value="" selected>Select Customer</option>

                                </select>
                                <span class="error"></span>
                            </div>
                        </div>

                        <div class="col-md-3">
                            <div class="form-group">
                                <label>Product Name</label>
                                <select class="form-control required" name="CustomerFavourites.Product_Id" placeholder="Product Name">
                                    <option value="" selected>Select Product</option>
                                    @if (Model.lst_Product != null)
                                    {
                                        foreach (var item in Model.lst_Product)
                                        {
                                            if (item.ProductId == Model.CustomerFavourites.Product_Id)
                                            {
                                                <option value="@item.ProductId" selected>@item.ProductName</option>
                                            }
                                            else
                                            {
                                                <option value="@item.ProductId">@item.ProductName</option>
                                            }

                                        }
                                    }
                                </select>
                                <span class="error"></span>
                            </div>
                            </div>

                            @*<div class="col-md-3">
                                    <div class="form-group">
                                        <label>Rating</label>
                                        <select id="" class="form-control">
                                            <option selected>Choose...</option>
                                            <option>...</option>
                                        </select>
                                    </div>
                                </div>

                                <div class="col-md-3">
                                    <div class="form-group">
                                        <label>Date</label>
                                        <div class="input-affix m-b-10">
                                            <i class="prefix-icon anticon anticon-calendar"></i>
                                            <input type="text" class="form-control datepicker-input" placeholder="Pick a date">
                                        </div>
                                    </div>
                                </div>*@
                        </div>

                        @*<div class="form-row">
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label>Reviews</label>
                                        <textarea class="form-control" id="" placeholder="Reviews" rows="6"></textarea>
                                    </div>
                                </div>
                            </div>*@

                        @*<div class="form-row">
                                <div class="col-md-3">
                                    <div class="form-group">
                                        <label>IsActive</label>
                                        <select id="" class="form-control">
                                            <option selected>Choose...</option>
                                            <option>...</option>
                                        </select>
                                    </div>
                                </div>
                            </div>*@

                        <div class="form-group row">
                            <div class="col-sm-6">
                                <button id="btnSubmit" type="submit" class="btn btn-primary">Save</button>

                                <a class="btn btn-primary" href="@Url.Action("GetCustomerFavouritesListing","CustomerFavourites")">Cancel</a>
                            </div>
                        </div>

                    </form>

                </div>

            </div>
        </div>

    </div>

    <script>
    $(document).ready(function () {

        if ('@ViewBag.Result'!= "")
        {
            if ('@ViewBag.Result' == "1") {
                $('.dvSuccess').show();
            }
            else if('@ViewBag.Result' == "2")
            {
                $('.dvUpdate').show();
            }
            else {
                $('.dvError').show();
            }
        }
        $("#dvMsg").delay(2000).hide(0);
    });
    </script>