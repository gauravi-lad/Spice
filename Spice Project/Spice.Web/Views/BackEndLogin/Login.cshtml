
@{
    ViewBag.Title = "Login";
    //Layout = "~/Views/Shared/loginbackend_Layout.cshtml";
}

<script src="~/Scripts/jquery-3.3.1.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/BackEndLogin/BackEndLogin_Event.js"></script>
<script src="~/Scripts/BackEndLogin/BackEndLogin_Method.js"></script>

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Admin Dashboard Template</title>

    <!-- Favicon -->
    <link rel="shortcut icon" href="~/Assets/BackEnd/images/logo/Logo1.jpeg">


    <!-- page css -->
    <!-- Core css -->
    <link href="~/Assets/BackEnd/css/app.min.css" rel="stylesheet">

</head>

<body>

    <div class="app">
        <div class="container-fluid">
            <div class="d-flex full-height p-v-15 flex-column justify-content-between">
                <div class="d-none d-md-flex p-h-40">
                    <img src="~/Assets/BackEnd/images/logo/favicon.png" alt="">
                </div>
                <div class="container">
                    <div class="row align-items-center">
                        <div class="col-md-5">
                            <div class="card">
                                <div class="card-body">
                                    <h2 class="m-t-20">Sign In</h2>
                                    <p class="m-b-30">Enter your credential to get access</p>
                                    <form id="frmBackEnd" method="post" enctype="multipart/form-data">
                                        <div class="form-group">
                                            <label class="font-weight-semibold" for="userName">Username:</label>
                                            <div class="input-affix">
                                                <i class="prefix-icon anticon anticon-user"></i>
                                                <input type="text" class="form-control required" id="userName" name="backEndLogin_DataModel.Username" placeholder="Username">
                                            </div>
                                            <div>
                                                <span class="error"></span>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label class="font-weight-semibold" for="password">Password:</label>
                                            @*<a class="float-right font-size-13 text-muted" href="">Forget Password?</a>*@
                                            <div class="input-affix m-b-10">
                                                <i class="prefix-icon anticon anticon-lock"></i>
                                                <input type="password" class="form-control required" name="backEndLogin_DataModel.Password" id="password" placeholder="Password">
                                            </div>
                                            <div>
                                                <span class="error"></span>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <div class="d-flex align-items-center justify-content-between">
                                                @*<span class="font-size-13 text-muted">
                                                    Don't have an account?
                                                    <a class="small" href=""> Signup</a>
                                                </span>*@
                                                <button class="btn btn-primary" id="btnLogin">Sign In</button>
                                            </div>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                        <div class="offset-md-1 col-md-6 d-none d-md-block">
                            <img class="img-fluid" src="~/Assets/BackEnd/images/others/login-2.png" alt="">
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>


</body>

</html>

<script>
    $(document).ready(function () {

        if ('@ViewBag.Result'!= "")
        {
            if ('@ViewBag.Result' == "0") {
                $('.dvUnsuccessfull').show();
            }
            else {
                $('.dvError').show();
            }
        }
        $("#dvMsg").delay(2000).hide(0);
    });
</script>

