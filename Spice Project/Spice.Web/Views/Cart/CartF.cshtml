@model Spice.DataContarct.ViewModel.Cart_ViewModel

@{ Layout = "~/Views/Shared/_LayoutFrontEnd.cshtml"; }
<script src="~/Scripts/jquery-3.3.1.min.js"></script>
<script src="~/Scripts/Cart/Cart_Event.js"></script>

<div id="header"></div>
<!-- Header End -->
<!-- Breadcrumb Area start -->
<section class="breadcrumb-area">
    <div class="container">
        <div class="row">
            <div class="col-md-12">

            </div>
        </div>
    </div>
</section>
<!-- Breadcrumb Area End -->
<!-- cart area start -->


<div class="cart-main-area mtb-60px">
    <div class="container">
        <h3 class="cart-page-title">Your cart items</h3>
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-12">
                <form action="#">
                    <div class="table-content table-responsive cart-table-content">
                        <table id="Cartlist">
                            <thead>
                                <tr>
                                    <th>Image</th>
                                    <th>Product Name</th>
                                    <th>Unit Price</th>
                                    <th>Qty</th>
                                    <th>Subtotal</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.lst_CartDataModel != null)
                                {
                                    var count = 1;


                                    foreach (var item in Model.lst_CartDataModel)
                                    {
                                        var TotalPrice = @item.RatePerPc * @item.Quantity;


                                        <tr>
                                            <td>
                                                <a href="#"><img src="@item.image" alt="" /></a>
                                            </td>
                                            <td class="product-name"><a href="#">@item.ProductName</a></td>
                                            <td class="product-price-cart"><span class="amount">@item.RatePerPc</span></td>
                                            <td class="product-quantity">
                                                <div class="cart-plus-minus" onclick="ChangeCart_total(@item.RatePerPc,@count,@item.Product_ID,@item.ProductSku_ID,@item.Customer_ID,@item.Unit)">
                                                    <input class="cart-plus-minus-box Quanitycheck" type="text" id="txtQuantity_@count" name="qtybutton" value="@item.Quantity" />
                                                </div>
                                            </td>
                                            <td class="product-subtotal" id="hdntotal_@count"> @TotalPrice</td>
                                            <td class='edit'>
                                                <a class="btn btn-icon btn-hover btn-sm btn-rounded" href="#" onclick="DeleteCart(@item.Customer_ID,@item.Product_ID,@item.ProductSku_ID)">
                                                    <i class="anticon-delete"></i>
                                                </a>

                                            </td>

                                        </tr>
                                        count++;
                                    }

                                }
                            </tbody>
                        </table>
                    </div>
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="cart-shiping-update-wrapper">
                                <div class="cart-shiping-update">
                                    <a href="@Url.Action("Index", "FrontEnd",UrlParameter.Optional)">Continue Shopping</a>
                                </div>
                                <!--<div class="cart-clear">
                                    <button>Update Shopping Cart</button>
                                    <a href="#">Clear Shopping Cart</a>
                                </div>-->
                            </div>
                        </div>
                    </div>
                </form>
                <div class="row">

                    <div class="col-lg-4 col-md-12">
                        <div class="grand-totall">
                            <div class="title-wrap">
                                <h4 class="cart-bottom-title section-bg-gary-cart">Cart Total</h4>
                            </div>
                            <h5>Total products <span id="totalproPrice"></span></h5>

                            <h4 class="grand-totall-title">Grand Total <span id="GrandPrice"></span> </h4>
                            <a href="@Url.Action("Checkout", "FrontEnd",UrlParameter.Optional)">Proceed to Checkout</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- cart area end -->
<!-- Footer Area start -->
<div id="footer"></div>

